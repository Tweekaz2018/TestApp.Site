@model PageViewModel<TestApp.Domain.Category>

<div class="btn-group" role="group">
    <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-dark">To index page</a>
    <button onclick="history.back()" class="btn btn-outline-primary">Back</button>
    <button class="btn btn-outline-success" onclick="AddCategoryModal()">Add category</button>
</div>
<br />
<table class="table table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    @foreach (var item in Model.list)
    {
        <tr>
            <td><input type="text" data-id="@item.Id" value="@item.name" /></td>
            <td>
                <button class="btn btn-primary" onclick="UpdateCategory(@item.Id)">Save</button>
                <button class="btn btn-secondary" onclick="DeleteCategory(@item.Id)">Delete</button>
            </td>
        </tr>
    }
</table>
@if (Model.HasPreviousPage)
{
    <a asp-action="GetItemsCategories"
       asp-route-page="@(Model.PageNumber - 1)"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Back
    </a>
}
@if (Model.HasNextPage)
{
    <a asp-action="GetItemsCategories"
       asp-route-page="@(Model.PageNumber + 1)"
       class="btn btn-outline-dark">
        Next
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}